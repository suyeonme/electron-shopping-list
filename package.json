{
  "name": "electron-shopping-list",
  "version": "1.0.0",
  "description": "Electron tutorial",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"ShoppingList\"",    
    "package-linux": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/icon.png --prune=true --out=release-builds"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suyeonme/electron-shopping-list.git"
  },
  "keywords": [
    "electron"
  ],
  "author": "Suyeon Kang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/suyeonme/electron-shopping-list/issues"
  },
  "homepage": "https://github.com/suyeonme/electron-shopping-list#readme",
  "dependencies": {
    "dotenv": "^16.0.0",
    "electron": "^11.0.0"
  },
  "devDependencies": {
    "electron-packager": "^15.4.0"
  }
}
